<h2>User info</h2>

<div class="profile_image">
  <%= image_tag user.get_profile_image(100,100) %>
</div>
<div>
  <table class="table tadle-striped">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div>
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class='fas fa-user-cog'></i>
    <% end %>
  </div>
</div><br>

<h2>New book</h2>

<div class="new-book">
  <%= form_with model: book do |b| %>
    <div class"form-group">
      <%= b.label :title %><br>
      <%= b.text_field :title %>
    </div><br>
    <div class="form-group">
      <%= b.label :body %><br>
      <%= b.text_area :body %>
    </div>

    <%= b.submit 'Create Book', class: "btn btn-success btn-block" %>
<% end %>
</div>

