<h2>Books</h2>
      
<div>
<%= books.each do |books| %>
  <table class="table tadle-striped">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th><%= image_tag books.user.get_profile_image(100,100) %></th>
        <th><%= books.title %></th>
        <th><%= books.opinion %></th>
      </tr>
    </tbody>
  </table>
<% end %>
</div>
      
    
