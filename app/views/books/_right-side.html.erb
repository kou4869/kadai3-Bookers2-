<h2>Books</h2>


<table class="table tadle-striped">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% books.each do |book| %>
    <tr>
      <th>
        <%= link_to user_path(book.user) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
      </th>
      <th>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </th>
      <th><%= book.body %></th>
    </tr>
  <% end %>
  </tbody>
</table>

